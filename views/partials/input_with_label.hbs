<block
  marginTop="{{marginTop}}"
  marginBottom="{{marginBottom}}"
  marginRight="{{marginRight}}"
  marginLeft="{{marginLeft}}"
  width="100%"
>
  <text bold="true" muted="true">{{ label }}</text>
  <input
    name="{{ name }}"
    type="{{ type }}"
    placeholder="{{ placeholder }}"
    margin="0"
  ></input>
</block>